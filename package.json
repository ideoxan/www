{
    "name": "www",
    "private": true,
    "description": "The Ideoxan website and server, all rolled into one, powered by Remix, TailwindCSS, and Supabase.",
    "license": "(MIT OR MPL-2.0 OR CC-BY-SA-4.0)",
    "sideEffects": false,
    "scripts": {
        "start": "cross-env NODE_ENV=production npm run dev:wrangler",
        "serve": "npm run build:css && npm run build",
        "build": "remix build",
        "build:css": "npm run generate:css -- -m",
        "dev:remix": "remix watch",
        "dev": "remix build && run-p \"dev:*\"",
        "dev:css": "npm run generate:css -- -w ",
        "dev:wrangler": "cross-env NODE_ENV=development wrangler pages dev ./public",
        "generate:css": "tailwindcss -i ./app/styles/tailwind.css -o app/styles/app.css  -c ./tailwind.config.cjs",
        "format": "prettier --write ."
    },
    "dependencies": {
        "@icons-pack/react-simple-icons": "^5.5.0",
        "@mapbox/rehype-prism": "0.7.0",
        "@monaco-editor/react": "^4.4.5",
        "@remix-run/cloudflare": "^1.7.0",
        "@remix-run/cloudflare-pages": "^1.7.0",
        "@remix-run/react": "^1.7.0",
        "@supabase/supabase-js": "^1.35.6",
        "cross-env": "^7.0.3",
        "dexie": "^3.2.2",
        "lucide-react": "^0.89.0",
        "marked": "^4.1.0",
        "mime": "^3.0.0",
        "monaco-themes": "^0.4.2",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-spinners": "^0.13.4",
        "remark-reading-time": "^2.0.1",
        "remix": "^1.7.0",
        "remix-auth": "^3.2.2",
        "remix-auth-supabase": "^4.0.0",
        "socket.io": "^4.5.2",
        "socket.io-client": "^4.5.2",
        "uuid": "^9.0.0",
        "xterm": "^4.19.0",
        "xterm-addon-fit": "^0.5.0"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "^3.16.0",
        "@remix-run/dev": "^1.7.0",
        "@remix-run/eslint-config": "^1.7.0",
        "@remix-run/serve": "^1.7.0",
        "autoprefixer": "^10.4.10",
        "concurrent": "^0.3.2",
        "eslint": "^8.23.1",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.16",
        "prettier": "^2.7.1",
        "prettier-plugin-tailwindcss": "^0.1.13",
        "tailwindcss": "^3.1.8",
        "wrangler": "^2.0.27"
    },
    "engines": {
        "node": ">=16.13"
    }
}
